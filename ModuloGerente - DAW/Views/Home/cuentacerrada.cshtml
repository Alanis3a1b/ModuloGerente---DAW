    <script>
        var ctx = document.getElementById('myChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar', // Tipo de gráfico, puede ser 'bar', 'line', 'pie', etc.
            data: {
                labels: ['Clientes', 'Cantidad de ordenes', 'Cantidad de pedidos'], // Etiquetas de los datos
                datasets: [{
                    data: [12.5, 19, 3], // Datos
                    backgroundColor: [ // Colores de fondo de las barras
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)'
                    ],
                    borderColor: [ // Colores de borde de las barras
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)'
                    ],
                    borderWidth: 2 // Ancho del borde de las barras
                }]
            },
            options: {
                maintainAspectRatio: false, // Desactiva la proporción de aspecto
                responsive: true, // Hace que la gráfica sea responsive
                plugins: {
                    legend: {
                        display: true,
                        position: 'top'
                    }
                },
                layout: {
                    padding: {
                        top: 10,
                        bottom: 10,
                        left: 10,
                        right: 10
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>

