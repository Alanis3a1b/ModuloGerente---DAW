@{
    ViewData["Title"] = "Pedidos en proceso";
}
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>
<body>
    <div class="container-fluid">
        <!-- Return-->
        <nav class="navbar navbar-light bg-light">
            <div class="container-fluid">
                <div class="navbar-brand d-flex align-items-center mt-3">
                    <i class="bi bi-arrow-left" alt="" width="30" height="24"></i>
                    <h3 class="ms-3 mb-0">PEDIDOS EN PROCESO</h3>
                </div>
            </div>
        </nav>
        <!-- Return-->
        <!-- Mesas -->
        <div class="container-fluid mt-3">
            <div class="row row-cols-1 row-cols-md-3">
                @foreach (var pedido in (IEnumerable<dynamic>)ViewData["pedidosProceso"])
                {
                    <div class="col">
                        <div class="card text-dark bg-warning mb-3" style="max-width: 18rem;">
                            <div class="card-header"><h3>ORDEN ID: @pedido.id_pedido</h3></div>
                            <div class="card-body">                             
                                @foreach (var detalle in pedido.detalles)
                                {
                                    <div class="row">
                                        <div class="col">
                                            <!-- Nombre del platillo -->
                                            <p>@detalle.nombre_comida</p>
                                            <!-- Agrega los demás detalles del platillo aquí -->
                                        </div>
                                        <div class="col">
                                            <!-- Precio del platillo -->
                                            <p>$@detalle.costo_comida</p>
                                            <!-- Agrega otros detalles del precio aquí -->
                                        </div>
                                    </div>
                                }
                                <div class="row">
                                    <div class="col">
                                        <p style="font-weight: bold;"> Total</p>
                                    </div>
                                    <div class="col">
                                        <p id="total" style="font-weight: bold;">$@pedido.total</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <!-- Mesas -->
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
