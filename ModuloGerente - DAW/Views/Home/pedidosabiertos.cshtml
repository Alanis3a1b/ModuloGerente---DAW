@{
    ViewData["Title"] = "Pedidos abiertos";
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/site.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <!--NAVAR-->
        <div class="text-center">
            <nav class="navbar navbar-dark" style="background-color: #895a24">
                <div class="container-fluid input-group justify-content-between">
                    @* Izquierda *@
                    <div class="d-flex">
                        @* Logo *@
                        <a class="navbar-brand me-2 mb-1 d-flex align-items-center" href="#">
                            <img src="/css/img/DulceSaborLogo.png">
                        </a>
                        @* Busqueda *@
                        <form class="input-group w-auto my-auto d-none d-sm-flex">
                            <span class="input-group-text border-0 d-lg-none d-lg-flex" style="background-color: #895a22">
                                <i class="bi bi-search text-light"></i>
                            </span>
                            <input autocomplete="off"
                                   type="search"
                                   class="form-control rounded bg-dark text-light"
                                   placeholder="Search"
                                   style="min-width: 125px; background-color: #895a22;" />
                        </form>
                    </div>
                    @* Derecha *@
                    <div>
                        <i class="bi bi-person-circle text-light" style="font-size: 25px;"></i>
                    </div>
                </div>
            </nav>
        </div>


        <nav class="navbar navbar-light bg-light">
            <div class="container">
                <div class="navbar-brand d-flex align-items-center mt-3">
                    <i class="bi bi-arrow-left" alt="" width="30" height="24"></i>
                    <button onclick="location.href='@Url.Action("RedireccionarAIndex", "Home")'">PEDIDOS ABIERTO</button>
                </div>
            </div>
        </nav>

        <div class="container">
            <div class="row">
                <div class="col">
                    <hr>
                    <div class="contenedor-flex">
                        <button>Pedidos locales activos</button>
                        <button>Pedidos en línea activos</button>
                    </div>
                    <br />

                </div>
            </div>
        </div>

        @*Aquí van las listas de los pedidos*@
        <div class="container mt-3">
            <div class="row row-cols-1 row-cols-md-3">
                @*Basicamente, foreach es "por cada" elemento que saque de la funcion que le establecemos
                    en Viewdata["pedidosAbiertos"], lo agregará en una tablita establecida en html en el ORDEN ID
                *@
                @foreach (var pedido in (IEnumerable<dynamic>)ViewData["pedidosAbiertos"])
                {
                    <div class="col">
                        <div class="card text-dark bg-warning mb-3" style="max-width: 18rem;">
                            <div class="card-header"><h3>ORDEN ID: @pedido.id_pedido</h3></div>
                            <div class="card-body">
                                @*Aquí está tomando los demás datos del id que tomo*@
                                @foreach (var detalle in pedido.detalles)
                                {
                                    <div class="row">
                                        <div class="col">
                                            <!-- Nombre del platillo -->
                                            <p>@detalle.nombre_comida</p>
                                        </div>
                                        <div class="col">
                                            <!-- Precio del platillo -->
                                            <p>$@detalle.costo_comida</p>
                                        </div>
                                    </div>
                                    
                                }
                                <div class="row">
                                    <div class="col">
                                        <p style="font-weight: bold;"> Total</p>
                                    </div>
                                    <div class="col">
                                        <p id="total" style="font-weight: bold;">$@pedido.total</p>
                                    </div>
                                </div>
                                <hr>
                                    <div class="col">
                                        @*Estado abierto tendrían que salir*@
                                        <p>Estado: @pedido.estado</p>
                                    </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
    <footer style="background-color: #895a22; color: white; padding: 20px;">
        <div class="container text-center">
            <p>Copyright © 2024. Todos los derechos reservados.</p>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
