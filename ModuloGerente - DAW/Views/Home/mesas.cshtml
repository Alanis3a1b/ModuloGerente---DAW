@{
    ViewData["Title"] = "Mesas";

}
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/style.css">
    <link rel="stylesheet" type="text/css" href=“tu_dominio_web/css_root/flaticon.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="text-center">
            <nav class="navbar navbar-dark" style="background-color: #895a22">
                <div class="container-fluid input-group justify-content-between">
                    @* Izquierda *@
                    <div class="d-flex">
                        @* Logo *@
                        <a class="navbar-brand me-2 mb-1 d-flex align-items-center" href="#">
                            <img src="./css/DulceSaborLogo.png">
                        </a>
                        @* Busqueda *@
                        <form class="input-group w-auto my-auto d-none d-sm-flex">
                            <span class="input-group-text border-0 d-lg-none d-lg-flex" style="background-color: #895a22">
                                <i class="bi bi-search text-light"></i>
                            </span>
                            <input autocomplete="off"
                                   type="search"
                                   class="form-control rounded bg-dark text-light"
                                   placeholder="Search"
                                   style="min-width: 125px; background-color: #895a22;" />
                        </form>
                    </div>
                    @* Derecha *@
                    <div>
                        <i class="bi bi-person-circle text-light" style="font-size: 25px;"></i>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    @*Primera fila*@
    <nav class="navbar navbar-light bg-light">
        <div class="container">
            <div class="navbar-brand d-flex align-items-center mt-3">
                <i class="bi bi-arrow-left" alt="" width="30" height="24"></i>
                <button onclick="location.href='@Url.Action("RedireccionarAIndex", "Home")'">MESAS</button>
            </div>
        </div>
    </nav>

    @*Aqui va lo de la cantidad de mesas y los botones de filtrado*@
    <div class="container">
        <div class="row">
            <div class="col">
                <hr>
                <div class="navbar-brand d-flex align-items-center mt-3">
                    <div class="card text-dark bg-warning mb-3">
                        <h3>Total mesas ocupadas: 3</h3>
                    </div>
                </div>

                <hr>
                <div class="row p-3" style="max-width: 18rem;">
                    <button>Filtrar por ocupadas</button>  
                </div>
                <div class="row-sm-4" style="max-width: 18rem;">
                    <button>Filtrar por disponibles</button>
                </div>
                <div class="row-sm-8" style="max-width: 18rem;">
                    <button>Filtrar todas las mesas</button>
                </div>
                <hr>

            </div>
        </div>
    </div>
    <!--Fin Container-->

    @*Aqui van las mesas*@
    <div class="row">
        <div class="col">
            <div class="card text-dark bg-warning mb-3" style="max-width: 18rem;">
                <div class="well">
                    <hr>
                    <h3 style="text-align: center;"><b>MESA 1</b></h3>
                    <hr>
                    <div>
                        @*Falta solucionar para que se vean las imágenes*@
                        <img src="/css/img/silla.png" />

                    </div>
                    <hr>
                    <div style="display: flex; justify-content: center;">
                        @Html.RadioButton("tipo_estado", "Disponible", true, new { id = "disponible" })
                        Disponible
                        @Html.RadioButton("tipo_estado", "Ocupado", false, new { id = "ocupado" })
                        Ocupado
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!--Fin Container-->
        
    @*Footer*@
    <footer style="background-color: #895a22; color: white; padding: 20px;">
        <div class="container text-center">
            <p>Copyright © 2024. Todos los derechos reservados.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    </div>
</body>